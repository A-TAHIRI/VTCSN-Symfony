{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

	<div class="container  p-4 mt-4  ">
		<div class="row   justify-content-center   ">
			<div class="col-sm-12 col-md-6 register   ">

				<h1 style="text-align: center;">Inscription</h1>

				{{ form_start(registrationForm) }}
				<div class="mb-3">
					<legend>Mon identité</legend>
					{{ form_row(registrationForm.genre ) }}
					{{ form_row(registrationForm.name) }}
					{{ form_row(registrationForm.surname) }}
					{{ form_row(registrationForm.email) }}
					{{ form_row(registrationForm.phoneNumber) }}

				</div>
				<div class="mb-3">
					<legend>Mes coordonnées</legend>
					{{ form_row(registrationForm.address) }}
					{{ form_row(registrationForm.zipcode) }}
					{{ form_row(registrationForm.city) }}
					{{ form_row(registrationForm.plainPassword ) }}
					{{ form_row(registrationForm.RGBDConsent) }}
					<div style=" text-align:center; ">
						<button type="submit" class="btn btn-primary btn-lg my-3" style=" border-radius: 15px; ">M'inscrire</button>
						<a href="{{path('app_login')}}" class="btn btn-warning btn-lg my-3" style=" border-radius: 15px; ">Me connecter</a>
						{{ form_end(registrationForm) }}
					</div>

				</div>


			</div>
		</div>
	</div>

{% endblock %}
